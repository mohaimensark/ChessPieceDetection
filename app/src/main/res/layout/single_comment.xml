<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/commentUserProfileImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="0dp"
            android:src="@drawable/ic_person_24"
            app:civ_border_width="1dp"
            android:layout_marginTop="5dp"
            app:civ_border_color="#FF000000"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/commentUserName"
            android:text="User Name"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_toRightOf="@id/commentUserProfileImage"
            android:layout_marginLeft="10dp"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/commentText"
            android:text="This is Message"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_below="@id/commentUserName"
            android:layout_toRightOf="@id/commentUserProfileImage"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/commentDateTime"
            android:text="Date and  Time"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_below="@id/commentText"
            android:layout_toRightOf="@+id/commentUserProfileImage"
            android:layout_marginLeft="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/commentDateTime"
            android:background="@drawable/line_divider"/>

    </RelativeLayout>

</LinearLayout>