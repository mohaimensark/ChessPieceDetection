<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="70dp"
    >

    <TextView
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Profile"
        android:textColor="#0B0000"
        android:textSize="25dp" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_width="150dp"

        android:layout_height="155dp"
        android:layout_below="@+id/profile"

        android:layout_centerInParent="true"
        android:fontFamily="@font/ubuntu_medium"
        android:src="@drawable/ic_portablejim_chess" />

    <ImageView
        android:id="@+id/upload"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/image"
        android:layout_centerInParent="true"
        android:fontFamily="@font/ubuntu_medium"
        android:src="@android:drawable/ic_menu_upload" />


    <TextView
        android:id="@+id/displayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upload"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Name : "
        android:textStyle="bold"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upload"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/displayName"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Name"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/displayEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displayName"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Email : "
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/displayEmail"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Email"
        android:textSize="16dp" />


    <TextView
        android:id="@+id/displayAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displayEmail"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/ubuntu_medium"
        android:text="About : "
        android:textSize="16dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/displayAbout"
        android:fontFamily="@font/ubuntu_medium"
        android:text="About"
        android:textSize="16dp" />


    <TextView
        android:id="@+id/displayBirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displayAbout"
        android:layout_marginBottom="10dp"
        android:text="Age : "
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/ubuntu_medium"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/displayBirth"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Birthday"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/displayProfession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displayBirth"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Profession : "
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/prof"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/birthday"
        android:layout_toRightOf="@id/displayProfession"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Profession"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/displayCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displayProfession"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Country : "
        android:textStyle="bold"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prof"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/displayCountry"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Bangladesh"
        android:textSize="16dp" />


    <TextView
        android:id="@+id/Displayphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displayCountry"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Phone No : "
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="16dp"  />
    <TextView
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/country"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/Displayphone"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Enter your Phone No"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/Update_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_below="@+id/Displayphone"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Update your profile"
        android:textColor="#2FE10B"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/verify_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Update_profile"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Email is not verified!Cleck here"
        android:textColor="#E10B7A"
        android:textSize="16dp" />

